{
  "processing": {
    "batch_size": 1,
    "timeout_seconds": 300,
    "retry_attempts": 2,
    "concurrent_processes": 2
  },
  "database": {
    "connection_pool_size": 3,
    "query_timeout": 30,
    "max_retries": 2
  },
  "monitoring": {
    "metrics_collection_interval": 60,
    "health_check_interval": 30,
    "alert_thresholds": {
      "memory_usage": 85.0,
      "error_rate": 0.1,
      "response_time": 10.0
    }
  },
  "security": {
    "audit_logging": true,
    "data_sanitization": true,
    "rate_limiting": false
  },
  "degradation": {
    "auto_recovery": true,
    "queue_mode_threshold": 300,
    "memory_threshold": 80.0
  }
}